---
layout: default
pageable: true
---
<% content_for :title do %>
  Archive for
  <% case page_type
       when 'day' %>
    <%= Date.new(year, month, day).strftime('%b %e %Y') %>
    <% when 'month' %>
    <%= Date.new(year, month, 1).strftime('%b %Y') %>
    <% when 'year' %>
    <%= year %>
  <% end %>
<% end %>

<% content_for :heading do %>
  <h1>Archive for
  <% case page_type
       when 'day' %>
    <%= Date.new(year, month, day).strftime('%b %e %Y') %>
    <% when 'month' %>
    <%= Date.new(year, month, 1).strftime('%b %Y') %>
    <% when 'year' %>
    <%= year %>
  <% end %>
  </h1>
<% end %>
