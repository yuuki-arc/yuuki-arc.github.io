<% list_title = current_page.data.title %>
<%= partial "layouts/header", :locals => { list_title: list_title } %>

<div class="section-header">
  <div class="container">
    <div class="row">

      <div class="col-lg-12">
        <h1 class="page-header"><%= list_title %></h1>
      </div>

    </div>
  </div> <!-- /.container -->
</div> <!-- /.section-colored -->

<div class="container container-int">

  <%#
  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Blog</li>
  </ol>
  %>

  <div class="row">

    <div class="col-md-12 col-sm-12">

        <div class="post">
          <h1 class="post-title"><%= link_to list_title, current_page.url %></h1>
          <p>
          </p>

          <%#= partial "layouts/post_meta", :locals => { article: article } %>
          <%#= partial "layouts/social_button", :locals => { article: article } %>
          <%#
          <div class="img-post">
            <img src="img/post1.png" alt="post 1" class="img-responsive">
          </div>
          %>
          <%= yield %>
          <%#= partial "layouts/social_button", :locals => { article: article } %>

        </div><!-- /.post -->


    </div>

  </div><!-- /.row -->

</div><!-- /.container -->

<%= partial "layouts/footer" %>
