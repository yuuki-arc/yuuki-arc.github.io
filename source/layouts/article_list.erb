<% wrap_layout :layout do %>
  <% page_articles.each_with_index do |article, i| %>
    <div class="post">
      <h2 class="post-title"><%= link_to article.title, article.path %></h2>
      <p class="post-meta">
        <i class="fa fa-calendar-o first"></i> <%= article.date.strftime('%Y-%m-%d') %>
        <i class="fa fa-user"></i> Admin
        <i class="fa fa-comment"></i> <%= link_to "Comments", article.path+"#disqus_thread" %>
      </p>
      <a href="blog-post.html" class="img-post">
        <img src="img/post1.png" alt="post 1" class="img-responsive">
      </a>
      <p><%= article.summary %><%= link_to 'Read More <i class="fa fa-angle-right"></i>', article.path, class: "btn btn-primary" %></p>
    </div><!-- /.post -->
  <% end %>

  <div class="text-center">
    <ul class="pagination">
      <li><a href="#"><i class="fa fa-angle-left"></i></a></li>
      <li class="active"><a href="#">1</a></li>
      <li><a href="#">2</a></li>
      <li><a href="#">3</a></li>
      <li><a href="#">4</a></li>
      <li><a href="#">5</a></li>
      <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
    </ul>
  </div><!-- /.text-center -->
<% end %>
