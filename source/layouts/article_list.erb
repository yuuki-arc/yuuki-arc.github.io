<% content_for :page_class do "article-list" end %>

<% wrap_layout :layout do %>
  <% page_articles.each_with_index do |article, i| %>
    <div class="post">
      <h2 class="post-title"><%= link_to article.title, article %></h2>
      <%= partial "layouts/post_meta", :locals =>{article: article} %>
      <%= partial "layouts/social_button", :locals =>{permalink: data.site.url + article.url, blog_title: article.title} %>
      <%#
      <a href="blog-post.html" class="img-post">
        <img src="img/post1.png" alt="post 1" class="img-responsive">
      </a>
      %>
      <%= article.summary %><%= link_to 'Read More <i class="fa fa-angle-right"></i>', article, class: "btn btn-primary" %>
    </div><!-- /.post -->
  <% end %>

  <% if paginate %>
    <%= partial "layouts/pagination", :locals =>{prev_page: prev_page, next_page: next_page, page_number: page_number, num_pages: num_pages} %>
  <% end %>


<% end %>
