<div class="col-md-4 col-sm-4 sidebar">
  <div class="well">
    <h4>このブログについて</h4>
    <div class="input-group">
      <p>
        <%= image_tag "about.jpg", class: "profile-image" %>
        <%= data.site.author.name %>
      </p>
      <p><%= data.site.description %></p>
    </div><!-- /input-group -->

  <ul class="list-inline list-unstyled social-networks">
    <li>
      <a href="<%= data.site.twitter.url %>">
        <div class="icon-social icon-social-twitter normal">
          <i class="fa fa-twitter"></i>
        </div>
        <div class="icon-social hover">
          <i class="fa fa-twitter"></i>
        </div>
      </a>
    </li>
    <li>
      <a href="<%= data.site.facebook.url %>">
        <div class="icon-social icon-social-facebook normal">
          <i class="fa fa-facebook"></i>
        </div>
        <div class="icon-social hover">
          <i class="fa fa-facebook"></i>
        </div>
      </a>
    </li>
    <li>
      <a href="<%= data.site.github.url %>">
        <div class="icon-social icon-social-github normal">
          <i class="fa fa-github"></i>
        </div>
        <div class="icon-social hover">
          <i class="fa fa-github"></i>
        </div>
      </a>
    </li>

  </div><!-- /.well -->

  <div class="well">
    <h4>ブログ内検索</h4>
    <div class="input-group">
      <%#
      <input type="text" class="form-control">
      <span class="input-group-btn">
        <button class="btn btn-primary" type="button"><i class="fa fa-search"></i></button>
      </span>
      %>
      <%= partial "layouts/google_search" %>
    </div><!-- /input-group -->
  </div><!-- /.well -->

  <%#
  <div class="well">
    <h4>Categories</h4>
    <ul class="nav nav-stacked nav-pills">
      <li><a href="#">Lorem</a></li>
      <li><a href="#">Ipsum</a></li>
      <li><a href="#">Dolor</a></li>
      <li><a href="#">Sit</a></li>
      <li><a href="#">Amet</a></li>
      <li><a href="#">Consectetur</a></li>
    </ul>
  </div><!-- /.well -->
  %>

  <div class="well">
    <h4>最新記事</h4>
    <ul class="nav nav-stacked nav-pills">
      <% blog.articles[0...5].each do |article| %>
        <li><a href="<%= article.url %>"><i class="fa fa-caret-right"></i> <%= article.date.strftime('%Y-%m-%d') %><br><%= article.title %></a></li>
      <% end %>
    </ul>
  </div><!-- /.well -->

  <div class="well">
    <h4>月別アーカイブ</h4>
    <% blog.articles.group_by {|a| a.date.year }.each do |year, year_articles | %>
      <li><%= link_to "#{year}年", blog_year_path(year) %> (<%= year_articles.size %>)</li>
      <ul>
        <% year_articles.group_by {|a| a.date.month }.each do |month, month_articles | %>
          <li><%= link_to "#{year}年#{month}月", blog_month_path(year, month) %> (<%= month_articles.size %>)</li>
        <% end %>
      </ul>
    <% end %>
  </div><!-- /.well -->

  <div class="well">
    <h4>タグ</h4>
    <div class="tags">
      <% blog.tags.each do |tag, articles| %>
        <%= link_to "#{tag} (#{articles.size})", tag_path(tag) %>
        <%#= link_to "#{tag}", tag_path(tag) %>
      <% end %>
    </div><!-- /tags -->
  </div><!-- /.well -->


</div><!-- /.sidebar -->
