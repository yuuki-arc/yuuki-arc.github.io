<% wrap_layout :layout do %>
  <% article ||= current_article %>
  <div class="post">
    <h1 class="post-title"><%= link_to article.title, article %></h1>
    <p class="post-meta">
      <i class="fa fa-calendar-o first"></i> <%= article.date.strftime('%Y-%m-%d') %>
      <i class="fa fa-user"></i> Admin
      <% if data.sites.disqus_short_name and article.data.comments != false %>
        <i class="fa fa-comment"></i>
        <%= link_to "Comments", "#disqus_thread"%>
      <% end %>
    </p>
      <div class="img-post">
        <img src="img/post1.png" alt="post 1" class="img-responsive">
      </div>
    <%= article.body %>
  </div><!-- /.post -->

  <!-- the comment box -->
  <div class="well">
    <%= partial "layouts/disqus" %>
  </div>

<% end %>
