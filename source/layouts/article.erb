<% wrap_layout :layout do %>
  <% article ||= current_article %>
  <div class="post">
    <h1 class="post-title"><%= link_to article.title, article %></h1>
    <p class="post-meta">
      <i class="fa fa-calendar-o first"></i> <%= article.date.strftime('%Y-%m-%d') %>
      <%# <i class="fa fa-user"></i> Admin %>
      <i class="fa fa-comment"></i> <%= link_to "Comments", "#disqus_thread" %>
      <i class="fa fa-tags"></i>
      <span class="tags tags-article-header">
      <% article.tags.each do |tag| %>
        <%= link_to tag, tag_path(tag) %>
      <% end %>
    </p>
    <%= partial "layouts/social_button", :locals =>{permalink: data.sites.url + article.url, blog_title: article.title} %>
      <%#
      <div class="img-post">
        <img src="img/post1.png" alt="post 1" class="img-responsive">
      </div>
      %>
    <%= article.body %>
    <%= partial "layouts/social_button", :locals =>{permalink: data.sites.url + article.url, blog_title: article.title} %>
  </div><!-- /.post -->

  <!-- the comment box -->
  <div class="well">
    <%= partial "layouts/disqus" %>
  </div>

  <hr>

  <div class="text-center">
    <ul class="pagination">
      <% if article.previous_article %>
        <li><%= link_to "<i class=\"fa fa-angle-double-left\"></i> #{article.previous_article.title}", article.previous_article %></li>
      <% end %>
      <% if article.next_article %>
        <li><%= link_to "#{article.next_article.title} <i class=\"fa fa-angle-double-right\"></i>", article.next_article %></li>
      <% end %>
    </ul>
  </div>

<% end %>
